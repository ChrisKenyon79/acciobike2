<!-- Stuff for making the frontpage bike move. -->
<script type="text/javascript">
    $(window).load(function(){
        $(".test1").lettering("words").children('span').lettering();
     });

    $(document).ready(function() {
      ride();
    });

    function ride() {
      $('.wrapper').click(function() {
        $(this).toggleClass('ride');
      });
    }

    $(".true_clicked").on("click", function(){
        $(".stolen_form").css("display", "inline");
    });

    $(".false_clicked").on("click", function(){
        $(".stolen_form").css("display", "none");
    });
</script>