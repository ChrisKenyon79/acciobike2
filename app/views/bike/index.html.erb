<div id="createBikePage">
  
<h1>Bike#index</h1>

<%= form_for :bike do |form| %>
<%= form.label :brand %>
<%= form.text_field :brand %>
<br><br>
<%= form.label :model %>
<%= form.text_field :model %>
<br><br>
<%= form.label :serialnumber %>
<br>
<%= form.text_field :serial_num %>


<br><br>
<%= form.label :Primarycolor %>
<br>
<%= form.text_field :color_primary %>
<br><br>
<%= form.label :Secondcolor %>
<br>
<%= form.text_field :color_secondary %>
<br><br>
<%= form.label :Thirdcolor %>
<br>
<%= form.text_field :color_tertiary %>


<br><br>
<%= radio_button_tag(:is_stolen, true) %>
<%= label_tag(:bike_true, "My bike was stolen") %>
<%= radio_button_tag(:is_stolen, false) %>
<%= label_tag(:bike_false, "My bike was not stolen") %>


<span id="photoInput">
  <br><br>
  <%= form.label :photo %>
  <%= form.file_field :photo %>
</span>

<br><br>
<%= form.label :description %>
<br>
<%= form.text_area :description %>
<br><br>
<%= form.submit %>
<%end%>

</div>